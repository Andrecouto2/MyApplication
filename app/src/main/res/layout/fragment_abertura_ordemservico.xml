<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearmaster"
    android:weightSum="100">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:weightSum="100"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:id="@+id/carddatahora"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="@integer/abertura_os_header"
                >

                <TableLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:stretchColumns="3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="DATA E HORÁRIO DE EXECUÇÃO DO SERVIÇO"
                        android:textStyle="bold"
                        android:textSize="@dimen/abertura_os_titulo"/>

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1">

                        <Space
                            android:id="@+id/TextView02" android:text="Data"
                            android:layout_weight="0.5"

                            android:padding="5dip" android:gravity="center"/>

                        <TextView
                            android:id="@+id/TextView04" android:text="Data"
                            android:layout_weight="1.3"
                            android:textStyle="bold"
                            android:padding="5dip" android:gravity="left"/>

                        <TextView
                            android:id="@+id/TextView03" android:text="Hora"
                            android:layout_weight="0.5"
                            android:textStyle="bold"

                            android:padding="5dip" android:gravity="left"/>

                    </TableRow>
                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:id="@+id/TextView33" android:text="Início:"
                            android:layout_weight="0.5"
                            android:padding="5dip" android:gravity="left"
                            android:textStyle="bold"/>


                        <TextView
                            android:id="@+id/etxt_fromdate"
                            android:layout_weight="1.3"
                            android:text="--"
                            android:padding="5dip"
                            android:gravity="left"/>

                        <TextView
                            android:id="@+id/etxt_fromtime"
                            android:layout_weight="0.5"
                            android:padding="5dip"
                            android:text="--"
                            android:gravity="left"/>

                    </TableRow>
                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/TextView66" android:text="Término:"
                            android:layout_weight="0.5"
                            android:padding="5dip" android:gravity="left"
                            android:textStyle="bold"/>


                        <TextView
                            android:id="@+id/etxt_todate"
                            android:layout_weight="1.3"
                            android:text="--"
                            android:padding="5dip"
                            android:gravity="left"/>

                        <TextView
                            android:id="@+id/etxt_totime"
                            android:layout_weight="0.5"
                            android:text="--"
                            android:padding="5dip"
                            android:gravity="left"/>

                    </TableRow>

                </TableLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:background="@drawable/linecircular">
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <ScrollView
                android:id="@+id/scrollViewAberturaOS"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="@integer/abertura_os_body">
        <LinearLayout
            android:id="@+id/linearmain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">
          </LinearLayout>
            </ScrollView>


            <LinearLayout
                android:id="@+id/linearcontinuar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="@integer/abertura_os_footer"
                android:orientation="horizontal"
                android:weightSum="100"
                android:background="@color/paletaazulclaro">
                <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icone_cad_continuar_os"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="35">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:text="CONTINUAR"
                        android:textSize="@dimen/abertura_os_txyview_continuar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25">

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


</LinearLayout>