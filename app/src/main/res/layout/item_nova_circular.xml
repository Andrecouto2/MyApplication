<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_viewos"
    android:layout_width="match_parent"
    android:layout_height="@dimen/circular_item_cardview_height"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@integer/circular_space_itemsuperior_weight"
            android:weightSum="100"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgviewleitura"
                android:layout_width="0dp"
                android:layout_weight="@integer/circular_space_item_img_weight"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/circular_space_item_img_margin_left"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/circular_space_item_centro_margin_left"
                android:layout_weight="@integer/circular_space_item_centro_weight">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desligar aparelhos"
                    android:textSize="@dimen/circular_space_item_centro_textview_font_size"
                    android:layout_gravity="center"
                    android:fontFamily="open_sans_light"
                    android:id="@+id/textViewNomeCircular" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/circular_space_item_right_margin_left"
                android:layout_weight="@integer/circular_space_item_right_weight">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00/00/0000"
                    android:textSize="@dimen/circular_space_item_right_txtview_font_size"
                    android:layout_marginRight="@dimen/circular_space_item_right_txtview_margin_right"
                    android:layout_gravity="center"
                    android:id="@+id/textViewDataCircular" />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>