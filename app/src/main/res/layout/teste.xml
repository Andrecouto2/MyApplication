<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:weightSum="100">

    <ScrollView
        android:id="@+id/scrollViewContentMan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/BLACK">
            <include
                android:id="@+id/container_header_banner"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="33"
                layout="@layout/home_banner_shopping" />

            <include
                android:id="@+id/container_header_os"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="33"
                layout="@layout/home_ordem_de_servico" />

            <include
                android:id="@+id/container_header_fnc_circ"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="33"
                layout="@layout/home_circular_funcionario" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="teste"
                android:visibility="invisible"/>



            </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="teste"
            android:visibility="invisible"/>

    </ScrollView>

</LinearLayout>