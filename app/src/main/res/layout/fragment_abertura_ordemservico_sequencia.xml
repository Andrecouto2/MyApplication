<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:weightSum="100"
    >

    <ScrollView
        android:id="@+id/scrollViewAberturaOS2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90">

        <LinearLayout
            android:id="@+id/linearmain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/carddatahora"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/txtviewshopluc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHOPPING"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                    <TableLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="3">
                        <TableRow
                            android:id="@+id/tableRow1"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/txtviewedtlojista"
                                android:layout_weight="0.1"
                                android:text="Lojista:"
                                android:gravity="bottom"
                                android:textStyle="bold"
                                android:textSize="16sp"/>
                            <EditText
                                android:id="@+id/edtlojista"
                                android:layout_weight="0.9"
                                android:inputType="text"/>

                        </TableRow>
                        <TableRow
                            android:id="@+id/tableRow2"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/txtviewedttelefone"
                                android:layout_weight="0.1"
                                android:text="Telefone:"
                                android:gravity="bottom"
                                android:textStyle="bold"
                                android:textSize="16sp"/>
                            <EditText
                                android:id="@+id/edttelefone"
                                android:layout_weight="0.9"
                                android:layout_marginLeft="2dp"
                                android:inputType="phone"/>

                        </TableRow>
                        <TableRow
                            android:id="@+id/tableRow32"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/txtviewedtemail"
                                android:layout_weight="0.1"
                                android:text="E-mail:"
                                android:gravity="bottom"
                                android:textStyle="bold"
                                android:textSize="16sp"/>
                            <EditText
                                android:id="@+id/edtemail"
                                android:layout_weight="0.90"
                                android:inputType="textEmailAddress"/>

                        </TableRow>
                    </TableLayout>





                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:background="@drawable/linecircular">
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cardservico"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/txtviewservico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SERVIÇO SELECIONADO"
                    android:textSize="16sp"
                    android:fontFamily="open_sans_light"
                     />


                    <TextView
                        android:id="@+id/txtviewtiposervico"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="open_sans_light"
                        android:layout_marginTop="4dp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:background="@drawable/linecircular">
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/carddatahora2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="16dp"
                    android:stretchColumns="3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="16dp"
                        android:text="DATA E HORA DO SERVIÇO "
                        android:textSize="16sp"/>

                    <TableRow
                        android:id="@+id/tableRow12"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1">

                        <Space
                            android:id="@+id/TextView02" android:text="Data"
                            android:layout_weight="0.5"

                            android:padding="5dip" android:gravity="center"/>

                        <TextView
                            android:id="@+id/TextView04" android:text="Data"
                            android:layout_weight="1.3"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:padding="5dip" android:gravity="left"/>

                        <TextView
                            android:id="@+id/TextView03" android:text="Hora"
                            android:layout_weight="0.5"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:padding="5dip" android:gravity="left"/>

                    </TableRow>
                    <TableRow
                        android:id="@+id/tableRow22"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:id="@+id/TextView33" android:text="Início:"
                            android:layout_weight="0.5"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:padding="5dip" android:gravity="left"/>


                        <TextView
                            android:id="@+id/etxt_fromdate2"
                            android:layout_weight="1.3"
                            android:text="--"
                            android:textSize="14sp"
                            android:padding="5dip"
                            android:gravity="left"/>

                        <TextView
                            android:id="@+id/etxt_fromtime2"
                            android:layout_weight="0.5"
                            android:padding="5dip"
                            android:textSize="14sp"
                            android:text="--"
                            android:gravity="left"/>

                    </TableRow>
                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/TextView66" android:text="Término:"
                            android:layout_weight="0.5"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:padding="5dip" android:gravity="left"/>


                        <TextView
                            android:id="@+id/etxt_todate2"
                            android:layout_weight="1.3"
                            android:text="--"
                            android:padding="5dip"
                            android:textSize="14sp"
                            android:gravity="left"/>

                        <TextView
                            android:id="@+id/etxt_totime2"
                            android:layout_weight="0.5"
                            android:text="--"
                            android:textSize="14sp"
                            android:padding="5dip"
                            android:gravity="left"/>

                    </TableRow>

                </TableLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:background="@drawable/linecircular">
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/carddescricao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

               >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/txtviewdescricao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DESCRIÇÃO"
                    android:textSize="16sp" />

                    <EditText
                        android:id="@+id/EditTextObs"
                        android:inputType="textMultiLine"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:lines="2"
                        android:hint="Informe os detalhes do serviço que será realizado."
                        android:textColorHint="@color/GRAY"
                        android:background="@drawable/editborder"
                        android:padding="10dp"
                        android:layout_marginTop="2dp"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:gravity="top|left"
                        android:isScrollContainer="true"
                        android:layout_marginBottom="16dp"
                        android:scrollbars="vertical"
                        android:maxLength="400"


                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:background="@drawable/linecircular">
                </LinearLayout>
            </android.support.v7.widget.CardView>
