                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">
                    <TableRow
                        android:id="@+id/tableRowADD"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <ImageButton
                            android:id="@+id/imgbtnpessoas"
                            android:layout_weight="0.1"
                            android:layout_gravity="center"
                            android:foreground="?attr/selectableItemBackground"
                            android:background="@drawable/icone_adicionar_pessoa_autorizada" />
                        <LinearLayout
                            android:layout_weight="0.4"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center|left">
                            <TextView
                                android:id="@+id/txtviewpessoas"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:foreground="?attr/selectableItemBackground"
                                android:text="@string/pessoas"
                                android:textSize="11sp" />
                            <TextView
                                android:id="@+id/textviewqtdpessoa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 pessoa"
                                android:textColor="@color/paletaazulclaro"
                                android:textSize="9sp"
                                android:gravity="left"
                                android:layout_gravity="left"/>
                        </LinearLayout>


                        <ImageButton
                            android:id="@+id/imgbtnarquivos"
                            android:layout_weight="0.1"
                            android:layout_gravity="center"
                            android:foreground="?attr/selectableItemBackground"
                            android:background="@drawable/icone_adicionar_arquivos" />
                        <LinearLayout
                            android:layout_weight="0.4"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center|left">

                            <TextView
                            android:id="@+id/txtviewarquivos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="@string/arquivos"
                            android:textSize="11sp" />
                            <TextView
                                android:id="@+id/textviewqtdanexo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 anexo"
                                android:textColor="@color/paletaazulclaro"
                                android:textSize="9sp"
                                android:gravity="left"
                                android:layout_gravity="left"/>
                        </LinearLayout>
                    </TableRow>
