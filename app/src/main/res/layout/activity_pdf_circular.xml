<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    tools:context=".activity.PdfCircularActivity">

    <FrameLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_marginTop="?android:attr/actionBarSize">

    <WebView
        android:id="@+id/webviewpdfcircular"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="@dimen/circular_pdf_progress_bar_width"
            android:layout_height="@dimen/circular_pdf_progress_bar_height"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateOnly="true"
            android:indeterminateDrawable="@drawable/animation_logo"
            android:layout_gravity="center" />

    </FrameLayout>
    <include layout="@layout/app_bar_main" android:layout_width="match_parent"
        android:layout_height="match_parent" />

</android.support.v4.widget.DrawerLayout>